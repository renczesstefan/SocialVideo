<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.social.socialvideo.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.social.socialvideo.fragments.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.social.socialvideo.fragments.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postsFragment"
            app:destination="@id/postsFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.social.socialvideo.fragments.ChangePasswordFragment"
        android:label="ChangePasswordFragment" >
        <action
            android:id="@+id/action_changePasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/postsFragment"
        android:name="com.social.socialvideo.fragments.PostsFragment"
        android:label="PostsFragment" >
        <action
            android:id="@+id/action_postsFragment_to_newPostFragment"
            app:destination="@id/newpostfragment" />
        <action
            android:id="@+id/action_postsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/newpostfragment"
        android:name="com.social.socialvideo.fragments.NewPostFragment"
        android:label="newPostFragment" >
        <action
            android:id="@+id/action_newPostFragment_to_postsFragment"
            app:destination="@id/postsFragment" />
        <action
            android:id="@+id/action_newPostFragment_to_camera2VideoFragment"
            app:destination="@id/camera2VideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/camera2VideoFragment"
        android:name="com.social.socialvideo.fragments.Camera2VideoFragment"
        android:label="Camera2VideoFragment" >
        <action
            android:id="@+id/action_camera2VideoFragment_to_confirmVideoFragment"
            app:destination="@id/confirmVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmVideoFragment"
        android:name="com.social.socialvideo.fragments.ConfirmVideoFragment"
        android:label="ConfirmVideoFragment" >
        <action
            android:id="@+id/action_confirmVideoFragment_to_newPostFragment"
            app:destination="@id/newpostfragment" />
        <action
            android:id="@+id/action_confirmVideoFragment_to_camera2VideoFragment"
            app:destination="@id/camera2VideoFragment" />
    </fragment>

</navigation>